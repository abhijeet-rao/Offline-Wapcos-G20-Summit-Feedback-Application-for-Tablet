<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/textPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="background">@color/white</item>
        <item name="android:statusBarColor">@color/black_overlay</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="alertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:titleTextColor" tools:targetApi="m">@android:color/white</item>
    </style>

    <style name="AppTheme.AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/textPrimary</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <!-- ActionBar styles -->

    <!-- ActionBar title text -->

    <!-- ActionBar tabs text styles -->

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
        //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        // You can change thickness here.

    </style>


    <style name="App.Theme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?colorSecondaryVariant</item>
        <item name="hintTextAppearance">@style/MyHintTextAppearance</item>
        <item name="boxStrokeColor">?colorSecondaryVariant</item>
        <item name="theme">@style/TextInputCursorColor</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:textSize">25sp</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="MyHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextInputCursorColor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">#7c808e</item>
    </style>

</resources>